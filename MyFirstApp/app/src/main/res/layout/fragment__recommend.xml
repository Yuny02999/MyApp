<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/Rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/classification2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:id="@+id/Llt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/flyCat"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flycat"
                        android:background="#00000000" />
                    <ImageButton
                        android:id="@+id/hot"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/flyCat"
                        android:src="@drawable/hot"
                        android:background="#00000000" />
                    <ImageButton
                        android:id="@+id/flyCat_"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flycat_"
                        android:background="#00000000"
                        android:layout_toRightOf="@+id/hot"/>
                    <ImageButton
                        android:id="@+id/farm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/farm"
                        android:background="#00000000"
                        android:layout_toRightOf="@+id/flyCat_"/>

                    <ImageButton
                        android:id="@+id/flyCat_supermarket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/farm"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/flycat_supermarket"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/Llt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Llt2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    >

                    <ImageButton
                        android:id="@+id/top_up"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/top_up"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/fresh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/fresh" />

                    <ImageButton
                        android:id="@+id/Gold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/gold" />

                    <ImageButton
                        android:id="@+id/auction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/auction" />

                    <ImageButton
                        android:id="@+id/classification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/classification"
                        tools:ignore="SpeakableTextPresentCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Llt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Llt1"
                    android:orientation="horizontal"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="天猫新品"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="今日爆款"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="天猫国际"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="怕怕农场"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="天猫超市"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Llt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Llt3"
                    android:orientation="horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="充值中心"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="淘鲜达"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="领淘金币"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="阿运拍卖"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="-10dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="分类"
                        android:textColor="#ABABAB"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                </LinearLayout>

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/classification2"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp">

                        <RelativeLayout
                            android:id="@+id/Bargain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/Bargain_Img1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_below="@+id/Bargain_TextView"
                                android:src="@drawable/time" />

                            <RelativeLayout
                                android:id="@+id/Bargain_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp">

                                <TextView
                                    android:id="@+id/BigOk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="聚划算"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/NoTime_RightNow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/BigOk"
                                    android:background="@drawable/bargain_style"
                                    android:text="限时抢"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/Bargain_Img2"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_toRightOf="@+id/Bargain_Img1"
                                android:src="@drawable/time" />

                        </RelativeLayout>


                        <View
                            android:id="@+id/View1"
                            android:layout_width="1dp"
                            android:layout_height="110dp"
                            android:background="#E3E3E3"
                            android:layout_toEndOf="@+id/Bargain"
                            android:layout_centerHorizontal="true"/>


                        <RelativeLayout
                            android:id="@+id/live"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/View1">

                            <ImageView
                                android:id="@+id/live_Img1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_below="@+id/live_TextView"
                                android:src="@drawable/time" />

                            <RelativeLayout
                                android:id="@+id/live_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp">

                                <TextView
                                    android:id="@+id/live_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="淘宝直播"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/live_logo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/live_"
                                    android:text="+"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/bargain_style"/>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/live_Img2"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:src="@drawable/time"
                                android:layout_toRightOf="@+id/live_Img1"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/GoodStuff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Bargain">

                            <ImageView
                                android:id="@+id/GoodStuff_Img1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_below="@+id/GoodStuff_TextView"
                                android:src="@drawable/time" />

                            <RelativeLayout
                                android:id="@+id/GoodStuff_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp">

                                <TextView
                                    android:id="@+id/youhaohuo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="有好货"
                                    android:textColor="#000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/WordOfMouth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/youhaohuo"
                                    android:background="@drawable/bargain_style"
                                    android:text="好口碑"
                                    android:textSize="10sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/GoodStuff_Img2"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_toRightOf="@+id/GoodStuff_Img1"
                                android:src="@drawable/time" />

                        </RelativeLayout>


                        <View
                            android:id="@+id/View2"
                            android:layout_width="1dp"
                            android:layout_height="110dp"
                            android:background="#E3E3E3"
                            android:layout_toEndOf="@+id/Bargain"
                            android:layout_below="@+id/View1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@+id/Bargain"
                            android:background="#E3E3E3"/>


                        <RelativeLayout
                            android:id="@+id/food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/View2"
                            android:layout_below="@+id/live"
                            >

                            <ImageView
                                android:id="@+id/food_Img1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_below="@+id/food_TextView"
                                android:src="@drawable/time" />

                            <RelativeLayout
                                android:id="@+id/food_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp">

                                <TextView
                                    android:id="@+id/food_"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="淘菜菜"
                                    android:textColor="#000"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/food_logo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_toEndOf="@+id/food_"
                                    android:text="次日自提"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/bargain_style"/>

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/food_Img2"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:layout_toRightOf="@+id/food_Img1"
                                android:src="@drawable/time" />

                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/Rel4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <!--图片-->

                    <LinearLayout
                        android:id="@+id/parent_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="#66000000"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <!--存放小圆点的容器-->
                        <View
                            android:id="@+id/main_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/Rel7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                >

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:persistentDrawingCache="animation">

                </androidx.viewpager.widget.ViewPager>

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="50"
                    android:rating="4"
                    android:stepSize="1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Rec1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#66000000" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_below="@+id/Rec1"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>