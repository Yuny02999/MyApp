        <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--公告-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gonggao" />

                    <com.superluo.textbannerlibrary.TextBannerView
                        android:id="@+id/textBanner"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        app:setAnimDuration="1500"
                        app:setDirection="left_to_right"
                        app:setGravity="left"
                        app:setInterval="3000"
                        app:setSingleLine="true"
                        app:setTextColor="#FFFFFF"
                        app:setTextSize="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#AAAAAA"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/denglu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buttonstyle"
                    android:text="登录"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

                <Button
                    android:id="@+id/zhuce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buttonstyle"
                    android:text="注册"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

                <Button
                    android:id="@+id/GDCP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buttonstyle"
                    android:text="GDCP"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#AAAAAA"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <Button
                        android:id="@+id/homework1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/buttonstyle"
                        android:text="作业1" />

                    <Button
                        android:id="@+id/homework2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/homework1"
                        android:background="@drawable/buttonstyle"
                        android:text="作业2" />

                    <Button
                        android:id="@+id/homework3"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/homework2"
                        android:background="@drawable/buttonstyle"
                        android:text="作业3" />

                    <Button
                        android:id="@+id/homework4"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/homework3"
                        android:background="@drawable/buttonstyle"
                        android:text="作业4" />

                    <Button
                        android:id="@+id/homework5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/homework4"
                        android:background="@drawable/buttonstyle"
                        android:text="作业5" />

                    <Button
                        android:id="@+id/homework6"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/homework5"
                        android:background="@drawable/buttonstyle"
                        android:text="作业6" />

                    <Button
                        android:id="@+id/homework7"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/homework1"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/buttonstyle"
                        android:text="作业7" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="#AAAAAA"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">

                    <Button
                        android:id="@+id/Sql"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/buttonstyle2"
                        android:text="SQL" />

                    <Button
                        android:id="@+id/bigUp"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/Sql"
                        android:background="@drawable/buttonstyle2"
                        android:text="play" />

                    <Button
                        android:id="@+id/Call"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/bigUp"
                        android:background="@drawable/buttonstyle2"
                        android:text="Call" />

                    <Button
                        android:id="@+id/Seek"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/Call"
                        android:background="@drawable/buttonstyle2"
                        android:text="某宝" />

                    <Button
                        android:id="@+id/Spinner1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/Seek"
                        android:background="@drawable/buttonstyle2"
                        android:text="sp1" />

                    <Button
                        android:id="@+id/PhotoAlbum"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/Spinner1"
                        android:background="@drawable/buttonstyle2"
                        android:text="相册" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="500dp"
                        android:orientation="horizontal">


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


